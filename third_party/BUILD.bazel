# third_party/BUILD.bazel

cc_import(
    name = "libzmq",
    shared_library = "libzmq/build/lib/libzmq.dylib",
    static_library = "libzmq/build/lib/libzmq.a",
    includes = ["libzmq/include"],
    linkopts = [
        "-L/opt/homebrew/lib",  # Use "/usr/local/lib" for Intel Macs
        "-lgnutls",
    ],
    visibility = ["//visibility:public"],
)

cc_library(
    name = "cppzmq",
    hdrs = glob(["cppzmq/**/*.hpp"]),
    includes = ["cppzmq"],  # Adjust if cppzmq headers are in a subdirectory
    visibility = ["//visibility:public"],
)
